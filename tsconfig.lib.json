{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "export",
    "src",
    "test",
    "docs",
    "public",
    "build",
    "dist",
    "out",
    "data",
    ".idea",
    ".vscode"
  ]
}
