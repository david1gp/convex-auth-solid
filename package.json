{
  "name": "@adaptive-sm/convex-auth",
  "version": "0.0.0",
  "scripts": {
    "build": "bun run build:lib",
    "build:site": "bun run vite:build",
    "build:lib": "clear ; rm -rf ./dist ; vite build --config vite.config.lib.ts",
    "backend:deploy": "bun run convex deploy --env-file=.env.prod",
    "frontend:deploy": "bun run vite:deploy && tag:frontend",
    "frontend:upload": "bun run wrangler pages deploy ./dist --commit-dirty=true --project-name=postmaschine-app",
    "tag:frontend": "git branch -f frontend",
    "tag:released": "git branch -f released",
    "tag:backend": "git branch -f backend",
    "dev": "bun run vite:dev",
    "vite:dev": "nice -5 vite dev --debug hmr",
    "vite:build": "nice -15 vite build",
    "vite:deploy": "bun run vite:build && bun run frontend:upload && bun run tag:frontend",
    "vite:clean": "rm -rf ./node_modules/.vite/deps",
    "vite:preview": "vite preview",
    "rsbuild:dev": "nice -5 bun run rsbuild dev",
    "rsbuild:build": "nice -15 bun run rsbuild build",
    "rsbuild:deploy": "bun run rsbuild:build && bun run frontend:upload && bun run tag:frontend",
    "rsbuild:clean": "rm -rf node_modules/.cache",
    "format": "prettier --write --cache \"{src,test}/**/*.{astro,js,jsx,ts,tsx}\"",
    "test": "bun test",
    "test:w": "bun test --watch",
    "compile": "clear && tsc",
    "compile:w": "clear && tsc -w",
    "convex:dev": "convex dev --local --local-cloud-port=3017 --local-site-port=3018",
    "convex:up:dev": "docker-compose -f ops/convex/convex.yml --env-file ops/convex/.env.dev up",
    "convex:up:prod": "docker-compose -f ops/convex/convex.yml --env-file ops/convex/.env.prod up -d",
    "convex:updateEnv:dev": "bun run src/server/ops/convexEnvUpdateDev.cli.ts",
    "convex:updateEnv:prod": "bun run src/server/ops/convexEnvUpdateProd.cli.ts",
    "convex:generateAdminKey": "docker-compose -f ops/convex/convex.yml exec backend ./generate_admin_key.sh",
    "convex:down:dev": "docker-compose -f ops/convex/convex.yml --env-file ops/convex/.env.dev down",
    "convex:down:prod": "docker-compose -f ops/convex/convex.yml --env-file ops/convex/.env.prod down",
    "convex:logs": "docker-compose -f ops/convex/convex.yml logs -f",
    "convex:restart": "docker-compose -f ops/convex/convex.yml restart",
    "generateDemoList": "bun run ./src/demos/generateDemoList.cli.ts",
    "updateAiRules": "bash ./node_modules/@adaptive-sm/solid-ui/lib/generate_ai_rules/generate_agent_rules.bash",
    "release": "bash ./ops/release.sh",
    "update": "bun x npm-check-updates -u && bun i",
    "update:commit": "bun x npm-check-updates -u && bun i && git add package.json && bun run tsc && git commit -m \"chore(deps): update dependencies\" && git push",
    "clean": "rm -rf ./dist",
    "reset": "rm -rf ./node_modules"
  },
  "peerDependencies": {
    "@adaptive-sm/solid-ui": "link:@adaptive-sm/solid-ui",
    "@adaptive-sm/utils": "link:@adaptive-sm/utils",
    "@floating-ui/dom": "^1.7.4",
    "@mdi/js": "^7.4.47",
    "@solid-primitives/keyed": "^1.5.2",
    "@solid-primitives/scheduled": "^1.5.2",
    "@solidjs/router": "^0.15.3",
    "convex": "^1.27.5",
    "dayjs": "^1.11.18",
    "jose": "^6.1.0",
    "jwt-decode": "^4.0.0",
    "solid-js": "1.9.9",
    "typescript": "^5",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@rsbuild/core": "^1.5.17",
    "@rsbuild/plugin-solid": "^1.0.6",
    "@tailwindcss/postcss": "^4.1.15",
    "@tailwindcss/vite": "^4.1.15",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.21",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.15",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.9",
    "wrangler": "^4.43.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "type": "module",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/adaptive-shield-matrix/convex-auth",
  "description": "Adaptive Convex Auth provides Solid.js UI components and utilities for easy authentication with the Convex backend. Includes ready-to-use auth flows and seamless integration.",
  "keywords": [
    "convex",
    "authentication",
    "auth",
    "solidjs",
    "solid-js",
    "ui-components",
    "reactive",
    "frontend",
    "adaptive",
    "login",
    "signup",
    "session",
    "convex-backend",
    "convex-auth",
    "jwt"
  ],
  "repository": {
    "url": "git+https://github.com/adaptive-shield-matrix/convex-auth.git"
  },
  "exports": {
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ]
}
