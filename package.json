{
  "name": "@adaptive-sm/convex-auth",
  "version": "0.0.0",
  "scripts": {
    "cc": "clear && bun run convex codegen",
    "t": "clear && bun run tsc",
    "type-check": "bun run tsc",
    "deploy": "bun run convex:deploy && bun run backend:deploy",
    "frontend:deploy": "bun run rsbuild:deploy",
    "frontend:upload": "bun run wrangler pages deploy ./dist --commit-dirty=true --project-name=adaptive-convex-auth",
    "frontend:tag": "git branch -f frontend",
    "dev": "bun run rsbuild:dev",
    "vite:dev": "bun run vite:clean && clear && nice -5 vite dev --debug hmr",
    "vite:build": "nice -15 vite build",
    "vite:deploy": "bun run vite:build && bun run frontend:upload && bun run frontend:tag",
    "vite:clean": "rm -rf ./node_modules/.vite/deps",
    "vite:preview": "nice -5 vite preview",
    "build": "bun run rsbuild:build",
    "rsbuild:dev": "nice -5 rsbuild dev",
    "rsbuild:build": "nice -15 rsbuild build",
    "rsbuild:deploy": "bun run rsbuild:build && bun run frontend:upload && bun run frontend:tag",
    "rsbuild:clean": "rm -rf node_modules/.cache",
    "format": "prettier --write --cache \"{src,test}/**/*.{astro,js,jsx,ts,tsx}\"",
    "test": "bun test",
    "test:w": "bun test --watch",
    "backend:deploy": "bun run convex:deploy && bun run backend:tag",
    "backend:tag": "git branch -f backend",
    "convex:dev": "clear && convex dev --local --local-cloud-port=3017 --local-site-port=3018",
    "convex:deploy": "bun run convex deploy --env-file=.env.prod",
    "caddy:restart": "systemctl --user restart caddy",
    "caddy:reload": "systemctl --user reload caddy",
    "caddy:status": "systemctl --user status caddy",
    "caddy:logs": "journalctl --user --since today -r --unit=caddy",
    "ui": "rsync -avh  ../adaptive-solid-ui/lib/ ./ui --delete",
    "generateDemoList": "bun run ./src/ui/demos/generateDemoList.cli.ts",
    "updateAiRules": "bash ./node_modules/@adaptive-sm/solid-ui/lib/generate_ai_rules/generate_agent_rules.bash",
    "release": "bash ./ops/release.sh",
    "update": "bun x npm-check-updates -u && bun i",
    "update:commit": "bun x npm-check-updates -u && bun i && git add package.json && bun run tsc && git commit -m \"chore(deps): update dependencies\" && git push",
    "clean": "rm -rf ./dist",
    "reset": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@adaptive-sm/email-generator": "link:@adaptive-sm/email-generator",
    "@adaptive-sm/solid-ui": "link:@adaptive-sm/solid-ui",
    "@adaptive-sm/utils": "link:@adaptive-sm/utils",
    "@floating-ui/dom": "^1.7.4",
    "@mdi/js": "^7.4.47",
    "@solid-primitives/keyed": "^1.5.2",
    "@solid-primitives/scheduled": "^1.5.2",
    "@solidjs/router": "^0.15.4",
    "convex": "^1.29.0",
    "dayjs": "^1.11.19",
    "jose": "^6.1.1",
    "jwt-decode": "^4.0.0",
    "solid-js": "1.9.10",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.4",
    "@rsbuild/core": "^1.6.3",
    "@rsbuild/plugin-solid": "^1.0.6",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/bun": "latest",
    "autoprefixer": "^10.4.22",
    "glob": "^11.0.3",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-solid": "^2.11.10",
    "wrangler": "^4.46.0"
  },
  "prettier": {
    "semi": false,
    "printWidth": 120,
    "trailingComma": "all"
  },
  "type": "module",
  "private": false,
  "license": "MIT",
  "homepage": "https://github.com/adaptive-shield-matrix/convex-auth",
  "description": "Adaptive Convex Auth provides Solid.js UI components and utilities for easy authentication with the Convex backend. Includes ready-to-use auth flows and seamless integration.",
  "keywords": [
    "convex",
    "authentication",
    "auth",
    "solidjs",
    "solid-js",
    "ui-components",
    "reactive",
    "frontend",
    "adaptive",
    "login",
    "signup",
    "session",
    "convex-backend",
    "convex-auth",
    "jwt"
  ],
  "repository": {
    "url": "git+https://github.com/adaptive-shield-matrix/convex-auth.git"
  },
  "exports": {
    "./*": {
      "import": "./dist/*.js",
      "types": "./dist/*.d.ts"
    }
  },
  "files": [
    "dist"
  ]
}
